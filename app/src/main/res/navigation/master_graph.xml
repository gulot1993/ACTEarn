<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/master_graph"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/logoutNavigation"
        app:destination="@+id/loginFragment"
        app:popUpTo="@id/master_graph"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.actearn.feature.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_studentHomeFragment"
            app:destination="@id/studentHomeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_professorHomeFragment"
            app:destination="@id/professorHomeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_dsaHomeFragment"
            app:destination="@id/dsaHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.actearn.feature.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_studentHomeFragment"
            app:destination="@id/studentHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_professorHomeFragment"
            app:destination="@id/professorHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dsaHomeFragment"
            app:destination="@id/dsaHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.actearn.feature.signup.SignUpFragment"
        tools:layout="@layout/fragment_signup"/>

    <fragment
        android:id="@+id/studentHomeFragment"
        android:name="com.example.actearn.feature.home.student.StudentHomeFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_studentHomeFragment_to_subjectFragment"
            app:destination="@id/subjectFragment" />
        <action
            android:id="@+id/action_studentHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/professorHomeFragment"
        android:name="com.example.actearn.feature.home.professor.ProfessorHomeFragment"
        tools:layout="@layout/fragment_professor">
        <action
            android:id="@+id/action_professorHomeFragment_to_addActivityFragment"
            app:destination="@id/addActivityFragment" />
        <action
            android:id="@+id/action_professorHomeFragment_to_viewStudentRecords"
            app:destination="@id/viewStudentRecords" />
    </fragment>

    <fragment
        android:id="@+id/addActivityFragment"
        android:name="com.example.actearn.feature.activity.add.AddActivityFragment"
        tools:layout="@layout/fragment_add_activity"/>

    <fragment
        android:id="@+id/subjectFragment"
        android:name="com.example.actearn.feature.activity.subject.SubjectFragment"
        tools:layout="@layout/fragment_subject">
        <action
            android:id="@+id/action_subjectFragment_to_takeQuizFragment"
            app:destination="@id/takeQuizFragment" />
    </fragment>

    <fragment
        android:id="@+id/takeQuizFragment"
        android:name="com.example.actearn.feature.activity.take.TakeQuizFragment"
        tools:layout="@layout/fragment_take_quiz">

        <argument
            android:name="activityId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.actearn.feature.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/dsaHomeFragment"
        android:name="com.example.actearn.feature.home.dsa.DSAHomeFragment"
        tools:layout="@layout/fragment_dsa">
        <action
            android:id="@+id/action_dsaHomeFragment_to_addRewardFragment"
            app:destination="@id/addRewardFragment" />
    </fragment>

    <fragment
        android:id="@+id/addRewardFragment"
        android:name="com.example.actearn.feature.rewards.add.AddRewardFragment"
        tools:layout="@layout/fragment_add_reward"/>

    <fragment
        android:id="@+id/viewStudentRecords"
        android:name="com.example.actearn.feature.records.StudentRecordFragment"
        tools:layout="@layout/fragment_student_records"/>
</navigation>