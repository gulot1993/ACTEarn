<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_with_gradient">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLogout"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAddReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Reward"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRewardsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards list:"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddReward"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintTop_toBottomOf="@id/tvRewardsList"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvClaimedRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Claimed Rewards:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvRewards"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvClaimedRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_min="150dp"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintTop_toBottomOf="@id/tvClaimedRewards"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>